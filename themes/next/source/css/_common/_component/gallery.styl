.post-gallery {
  display: table;
  border-spacing: 10px;
  border-collapse: separate;
}
.post-gallery a {
  display: table-cell;
  float: left;
  width: 33%;
  height: 130px;
  text-align: center;
  vertical-align: middle;
  border: none;
}

.post-gallery .post-gallery-img img {
  max-width: 100%;
  max-height: 100%;
  border: none;
}

.fancybox-close, .fancybox-close:hover {
  border: none;
}